import pandas as pd

def load_excel_tabs_to_dataframes(excel_file_path):
    # Read the Excel file
    excel = pd.ExcelFile(excel_file_path)
    
    # Get all sheet names
    sheet_names = excel.sheet_names
    
    # Create a dictionary to store DataFrames
    dfs = {}
    
    # Loop through each sheet and load it into a DataFrame
    for sheet in sheet_names:
        dfs[sheet] = pd.read_excel(excel_file_path, sheet_name=sheet)
        print(f"Loaded sheet '{sheet}' with {dfs[sheet].shape[0]} rows and {dfs[sheet].shape[1]} columns")
    
    return dfs

# Usage example
file_path = "your_excel_file.xlsx"  # Replace with your file path
dataframes = load_excel_tabs_to_dataframes(file_path)

# Access individual DataFrames
# For example, if you have a sheet named 'Sheet1'
# sheet1_df = dataframes['Sheet1']



sales_df = dataframes["Sales"]
expenses_df = dataframes["Expenses"]
summary_df = dataframes["Summary"]

# Now you can work with each DataFrame separately
