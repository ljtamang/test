# Ensure the project root is added to sys.path in the notebook
import sys
from pathlib import Path

# Add project root dynamically
project_root = Path().resolve().parent
if str(project_root) not in sys.path:
    sys.path.append(str(project_root))

# Import and use the file_tagger service
from services.file_tagger import tag_files

# Use the tag_files function
tag_files()




# services/file_tagger.py
import sys
from pathlib import Path

# Add project root to sys.path dynamically for direct execution
current_file = Path(__file__).resolve()
project_root = current_file.parent.parent
if str(project_root) not in sys.path:
    sys.path.append(str(project_root))

# Import the utility function using absolute import
from utils.file_utils import read_content

# Example function in file_tagger
def tag_files():
    print("Tagging files...")
    read_content()

# Direct execution
if __name__ == "__main__":
    tag_files()
