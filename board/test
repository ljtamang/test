def extract_file_categories(files: List[Dict[str, Any]]) -> List[Dict[str, str]]:
    """
    Transform file data to extract file paths and their keyword tags into a simplified format.
    
    Args:
        files (List[Dict[str, Any]]): List of file dictionaries with paths and tags
        
    Returns:
        List[Dict[str, str]]: List of dictionaries containing file_path and file_category
        
    Example:
        >>> files = [
        ...     {
        ...         "file_path": "path/to/file1",
        ...         "tags": [
        ...             {"keyword_tag": "research-findings", "score": 0},
        ...             {"ai_tag": "tag1", "score": 3}
        ...         ]
        ...     }
        ... ]
        >>> extract_file_categories(files)
        [{'file_path': 'path/to/file1', 'file_category': 'research-findings'}]
    """
    return [
        {
            "file_path": file["file_path"],
            "file_category": next(
                (tag["keyword_tag"] 
                 for tag in file["tags"] 
                 if "keyword_tag" in tag),
                None
            )
        }
        for file in files
    ]
