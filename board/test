CREATE DATABASE IF NOT EXISTS my_database
COMMENT 'This is my custom database'
LOCATION 'dbfs:/mnt/metadata/my_database';

CREATE TABLE my_database.file_metadata (
    name STRING,
    relative_file_path STRING,
    file_extension STRING,
    category STRING,
    git_last_commit_date TIMESTAMP,
    git_blob_hash STRING,
    upload_status STRING,
    upload_on TIMESTAMP
)
USING DELTA
LOCATION 'dbfs:/mnt/metadata/file_metadata';
