def get_files_metadata(
    target_files: list[dict],
    local_repo_path: str,
    blob_storage_path: str
) -> list[dict]:
    """
    Get metadata for a list of target files by calling get_metadata for each file.

    Args:
        target_files (list[dict]): List of dictionaries containing file information.
            Each dictionary should have 'file_path' and 'file_category' keys.
        local_repo_path (str): Path to the local repository.
        blob_storage_path (str): Path to blob storage.

    Returns:
        list[dict]: List of metadata dictionaries for each processed file.

    Example:
        target_files = [
            {
                "file_path": "path/to/file1",
                "file_category": "research-findings"
            },
            {
                "file_path": "path/to/file2",
                "file_category": "other"
            }
        ]
        metadata_list = get_files_metadata(target_files, "/local/repo", "/blob/storage")
    """
    metadata_list = []

    for file_info in target_files:
        # Extract file information
        file_metadata = get_metadata(
            file_info,
            local_repo_path,
            blob_storage_path
        )
        metadata_list.append(file_metadata)

    return metadata_list
